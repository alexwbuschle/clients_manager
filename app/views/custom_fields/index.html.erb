<%= render partial: 'shared/flash' %>

<h1>Custom Fields</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @custom_fields.each do |custom_field| %>
      <tr>
        <td><%= custom_field.name %></td>
        <td>
          <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_custom_field_path(custom_field) %>
          |
          <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, custom_field, method: :delete, data: { confirm: 'Are you sure? All contact fields will be deleted too!' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Custom field', new_custom_field_path %>
